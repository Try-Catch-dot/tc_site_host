---

<section>
  <div class="px-4 lg:mx-auto lg:max-w-screen-xl">
    <div class="bg-tc-black border border-gray-700 rounded-lg p-12 mb-8">
      <div class="mt-5 mb-6">
        <div class="flex items-center justify-center flex-row text-tc-gray-l text-3xl lg:text-4xl">
          <Icon class="w-10 h-10 text-white" name="ri:share-fill" />
          <span class="font-extrabold ml-2">
            {info.title}
          </span>
        </div>
        <ul class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-8 gap-8 bg-tc-black-l rounded-md p-5 mt-5">
          {info.socialNetworks.map((socialNetwork) => (
            <li class="text-white">
              <a
                href={socialNetwork.url}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center rounded-full transition-transform transform hover:scale-110"
              >
                <Icon
                  class="text-white hover:text-tc-yellow w-8 h-8"
                  name={socialNetwork.icon}
                />
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>
